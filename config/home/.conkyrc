update_interval 1
double_buffer yes
text_buffer_size 2048

# Window
background no
own_window yes
own_window_transparent yes
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Font
default_color white
use_xft yes

TEXT
${font Monospace:bold:size=7}

${color lightblue}--PS--
${color lightgreen}${texeci 1 ps aux | grep $USER | grep -v grep | grep -v zsh | grep -v i3 | grep -v "ps aux" | grep -v ".config/conky" | grep -v "gnome" | grep -v pulseaudio | grep -v sleep | grep -v system32 | grep -v gconfd-2 | grep -v ibus | grep -v nm-applet | grep -v // | grep -v gvfs | grep -v dbus | grep -v at-spi | grep -v notify-osd | grep -v TeamViewer.exe}

${goto 100}${voffset 0}${color lightblue}--SYSTEM--
${color lightgreen}+------------+-----------------+
| USERS      | ${scroll 15 1 ${execi 1 who | cut -d ' ' -f 1 | uniq | sort}} |
+------------+-----------------+${color}
#Temp: $acpitemp

${goto 100}${voffset 0}${color lightblue}--NETWORK--
${color lightgreen}${texeci 1 bash $HOME/.config/conky/network.sh}

${goto 100}${voffset 0}${color lightblue}--MEMORY--
${color lightgreen}${texeci 1 bash $HOME/.config/conky/memory.sh}

${goto 100}${voffset 0}${color lightblue}--CPU ${cpu} %--
${color lightgreen}${execpi 1 sh $HOME/.config/conky/cpu.sh}

BAT0: ${battery_bar 5, 105} | ${battery}

