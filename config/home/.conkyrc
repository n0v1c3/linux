update_interval 1
double_buffer yes
text_buffer_size 2048

# Window
background no
own_window yes
own_window_transparent yes
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Font
default_color white
use_xft yes

TEXT
${font Monospace:bold:size=7}

${color lightblue}--PS--
${color lightgreen}${texeci 1 ps u | grep -v "ps u"}

${goto 100}${voffset 0}${color lightblue}--SYSTEM--
${color lightgreen}+------------+-----------------+
| USERS      | ${scroll 15 5 ${execi 1 who | cut -d ' ' -f 1 | uniq | sort}} |
+------------+-----------------+${color}
#Temp: $acpitemp

${goto 100}${voffset 0}${color lightblue}--NETWORK--
${color lightgreen}${texeci 1 bash $HOME/.config/conky/network.sh}

${goto 100}${voffset 0}${color lightblue}--CPU--
CPU0: ${cpubar 5, 105} | ${cpu cpu0}%
CPU1: ${cpubar 5, 105} | ${cpu cpu1}%
CPU2: ${cpubar 5, 105} | ${cpu cpu2}%
CPU3: ${cpubar 5, 105} | ${cpu cpu3}%
${cpugraph 50, 155}

${goto 100}${voffset 0}${color lightblue}--MEMORY--
${color lightgreen}${texeci 1 bash $HOME/.config/conky/memory.sh}

BAT0: ${battery_bar 5, 105} | ${battery}

