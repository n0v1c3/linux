update_interval 1
double_buffer yes
text_buffer_size 2048

# Window
background no
own_window yes
own_window_transparent yes
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Font
default_color white
use_xft yes

TEXT
${font Monospace:bold:size=7}

${goto 100}${voffset 0}${color lightblue}--SYSTEM--
${color lightgreen}+------------+-----------------+
| USERS      | ${scroll 15 1 ${execi 1 who | cut -d ' ' -f 1 | uniq | sort}} |
+------------+-----------------+${color}
#Temp: $acpitemp

${goto 100}${voffset 0}${color lightblue}--NETWORK--
${color lightgreen}${texeci 1 bash $HOME/.config/conky/network.sh}

${goto 100}${voffset 0}${color lightblue}--MEMORY--
${color lightgreen}${texeci 1 bash $HOME/.config/conky/memory.sh}

${goto 100}${voffset 0}${color lightblue}--CPU ${cpu} %--
${color lightgreen}${execpi 1 sh $HOME/.config/conky/cpu.sh}

${goto 100}${color lightblue}--TOP--
${color lightgreen}+------------+-----------------+-----------------+-----------------+
| USER       | PID             | NAME            | CPU             |
+------------+-----------------+-----------------+-----------------+
| ${top user 1}${goto 83}| ${top pid 1}${goto 191}| ${top name 1}${goto 299}| ${top cpu 1}${goto 407}|
| ${top user 2}${goto 83}| ${top pid 2}${goto 191}| ${top name 2}${goto 299}| ${top cpu 2}${goto 407}|
| ${top user 3}${goto 83}| ${top pid 3}${goto 191}| ${top name 3}${goto 299}| ${top cpu 3}${goto 407}|
| ${top user 4}${goto 83}| ${top pid 4}${goto 191}| ${top name 4}${goto 299}| ${top cpu 4}${goto 407}|
| ${top user 5}${goto 83}| ${top pid 5}${goto 191}| ${top name 5}${goto 299}| ${top cpu 5}${goto 407}|
+------------+-----------------+-----------------+-----------------+

BAT0: ${battery_bar 5, 105} | ${battery}

