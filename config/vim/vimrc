" Prefered background
set background=dark

" Prefered colorscheme
colorscheme evening

" Display relative line number along the left hand side
set relativenumber

" Turn on spell check
setlocal spell spelllang=en_us

" Disable arrow keys for navigation
imap <up> <NOP>
imap <down> <NOP>
imap <left> <NOP>
imap <right> <NOP>

map <up> <NOP>
map <down> <NOP>
map <left> <NOP>
map <right> <NOP>
