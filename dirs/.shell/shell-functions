# Kill existing and restart xautolock using custom autolock
#foo=`ps cax | grep xautolock | xautolock -time 3 -locker autolock > /dev/null &`

if ! pgrep -u "$USER" xautolock > /dev/null
then
    xautolock -time 3 -locker autolock > /dev/null &
fi
